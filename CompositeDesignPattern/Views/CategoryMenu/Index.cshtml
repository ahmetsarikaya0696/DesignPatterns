@{
    ViewData["Title"] = "Index";
    var menu = ViewBag.menu as BookComposite;
}

<div>
    <select class="form-select" asp-items="ViewBag.selectList"></select>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                Toplam Kitap (@(menu.Count()))
            </div>

            <div class="card-body">
                @foreach (var component in menu.Components)
                {
                    @Html.Raw(component.Display())
                }
            </div>
        </div>
    </div>
</div>

